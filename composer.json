{
  "name": "phore/template",
  "description": "Inject variables into a template",
  "license": "MIT",
  "authors": [
    { "name": "Matthias Leuffen", "email": "m@tth.es" }
  ],
  "require": {
    "php": ">=8.1",
    "phore/filesystem": "*"
  },


  "suggest": {
  },
  "autoload": {
    "psr-4": {
      "Phore\\Template\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phore/tester": "*",
    "brixlab/coder": "*"
  },
  "config": {
    "preferred-install": "source",
    "allow-plugins": {
      "php-http/discovery": false
    }
  }
}
